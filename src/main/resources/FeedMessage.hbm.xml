<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.socialintellegentia.commonhelpers.rss">

    <class name="FeedMessage" table="feedMessage">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="parentId"/>
        <property name="title" type="text"/>
        <property name="link"  type="text"/>
        <property name="description"  type="text"/>
        <property name="guid" type="text" />
        <property name="pubDateDate" type="timestamp"/>
        <property name="pubDate"/>
        <property name="author"/>

    </class>

</hibernate-mapping>
